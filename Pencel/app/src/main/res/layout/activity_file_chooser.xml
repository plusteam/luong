<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteP"
    android:orientation="vertical">

    <include
        android:id="@+id/layHeader"
        layout="@layout/item_file_header"></include>

    <LinearLayout
        android:layout_below="@+id/layHeader"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp">
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rim_cycler"
            android:id="@+id/txtChooseFile"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/layHeader"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:layout_marginRight="5dp"
            android:layout_weight="0.3"
            android:background="@drawable/button_magic"
            android:id="@+id/btnShowDialog"
            android:textColor="@color/colorWhite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtChooseFile"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Chọn file" />
    </LinearLayout>


    <include
        android:id="@+id/layFooter"
        layout="@layout/item_file_footer"></include>


</RelativeLayout>

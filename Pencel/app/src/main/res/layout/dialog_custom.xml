<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteP"
    android:orientation="vertical">

    <include
        android:id="@+id/layHeader"
        layout="@layout/item_file_header"></include>

    <include
        android:id="@+id/lvDialog"
        layout="@layout/item_file_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layHeader"
        android:layout_above="@+id/layFooter"
        android:dividerHeight="5dp"></include>

    <include
        android:id="@+id/layFooter"
        layout="@layout/item_file_footer"></include>

</RelativeLayout>

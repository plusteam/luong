<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_marginBottom="2dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            android:src="@drawable/user_icon"
            android:background="@drawable/change_icon_user"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="0.5"
            android:layout_marginRight="2dp"
            android:onClick="toCustomer"
            />

        <ImageButton
            android:src="@drawable/refine_search"
            android:background="@drawable/change_icon_search"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="0.5"
            android:onClick="openCustomer"
            android:layout_marginLeft="2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageButton
            android:src="@drawable/calendar_icon"
            android:background="@drawable/change_icon_calendar"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="0.5"
            android:layout_marginRight="2dp"/>

        <ImageButton
            android:src="@drawable/project_icon"
            android:background="@drawable/change_icon_project"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="2dp"/>
    </LinearLayout>
</LinearLayout>

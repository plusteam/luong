<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include
        android:id="@+id/layHeader"
        layout="@layout/item_file_header_u"></include>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_below="@+id/layHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/txtChooseFile"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layHeader"
            android:background="@drawable/vienvuong"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_magic"
            android:id="@+id/btnShowDialog"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtChooseFile"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Chọn file" />
    </LinearLayout>

    <include
        android:id="@+id/layFooter"
        layout="@layout/item_file_footer_u"></include>


</RelativeLayout>
